<% content_for :title do %>LatCraft/AWS dashboard<% end %>
<div class="gridster">
  <ul>

    <!-- Row #1 -->

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="banner" data-view="Banner" style="background-color:#F0C662;"></div> 
    </li>

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="1">
      <div data-id="schedule" data-view="Schedule" style="background-color:#F0C662;" data-moreinfo="Coming up next"></div>    
      <i class="icon-tasks icon-background"></i>
    </li>

    <!-- Row #2 -->

    <li data-row="2" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="sponsor" data-view="Sponsor" style="background-color:#F0C662;"></div>
      <i class="icon-star icon-background"></i>
    </li>

    <li data-row="2" data-col="3" data-sizex="2" data-sizey="2">
      <div data-id="twitter_mentions" data-view="Twitter" style="background-color:#F0C662;" data-moreinfo="Tweets tagged with #latcraft"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <!-- Row #3 -->

    <li data-row="3" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="weather" data-view="Weather" style="background-color:#F0C662;"></div>
    </li>

    <li data-row="3" data-col="2" data-sizex="1" data-sizey="1">
      <div data-id="clock" data-view="Clock" style="background-color:#F0C662;"></div>
      <i class="icon-time icon-background"></i>
    </li>

    <li data-row="3" data-col="5" data-sizex="2" data-sizey="1">
      <div data-id="twitter_activity" data-view="Graph" data-title="(re)tweets/hour" style="background-color:#F0C662;"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

  </ul>
</div>