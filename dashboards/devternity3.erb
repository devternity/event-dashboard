<% content_for :title do %>DevTernity Dashboard<% end %>
<div class="gridster">
  <ul>

    <!-- Row #1 -->

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
      <div data-id="twitter_mentions" data-view="Twitter" style="background-color:#2EA946;" data-moreinfo="Tweets tagged with #devternity"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="1" data-banners="logo9">
      <div data-id="banner" data-view="Banner" style="background-color:#231F20;"></div> 
    </li>                                                                         

    <li data-row="1" data-col="5" data-sizex="2" data-sizey="1">
      <div data-id="track1" data-view="Track" style="background-color:#231F20;" data-moreinfo="Track 1"></div>    
      <i class="icon-tasks icon-background"></i>
    </li>

    <!-- Row #2 -->

    <li data-row="2" data-col="3" data-sizex="2" data-sizey="1" data-sponsors="visma 4finance intrum">
      <div data-id="sponsor" data-view="Sponsor" style="background-color:#231F20;"></div>
      <i class="icon-star icon-background"></i>
    </li>

    <li data-row="2" data-col="5" data-sizex="2" data-sizey="1">
      <div data-id="track2" data-view="Track" style="background-color:#231F20;" data-moreinfo="Track 2"></div>    
      <i class="icon-tasks icon-background"></i>
    </li>

    <!-- Row #3 -->

    <li data-row="3" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_activity" data-view="Graph" data-title="(re)tweets/hour" style="background-color:#2EA946;"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="3" data-col="3" data-sizex="1" data-sizey="1">
      <div data-id="weather" data-view="Weather" style="background-color:#EEEEEE;color:#231F20;"></div>
    </li>

    <li data-row="3" data-col="4" data-sizex="1" data-sizey="1">
      <div data-id="clock" data-view="Clock" style="background-color:#EEEEEE;color:#231F20;"></div>
      <i class="icon-time icon-background" style="color:#231F20;"></i>
    </li>

    <li data-row="3" data-col="5" data-sizex="2" data-sizey="1">
      <div data-id="track3" data-view="Track" style="background-color:#231F20;" data-moreinfo="Track 3"></div>    
      <i class="icon-tasks icon-background"></i>
    </li>

  </ul>
</div>